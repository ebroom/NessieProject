<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/customer_account_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <Button
            android:id="@+id/getAccounts"
            style="@style/NessieButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Account Info"
    />
    <Button
            android:id="@+id/postAccounts"
            style="@style/NessieButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Account"
    />
    <Button
            android:id="@+id/deleteAccounts"
            style="@style/NessieButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete All Accounts"
    />
    <Button
            android:id="@+id/getBills"
            style="@style/NessieButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Upcoming Bill"/>

</LinearLayout>