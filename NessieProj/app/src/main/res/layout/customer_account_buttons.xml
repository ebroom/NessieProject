<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/customer_account_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <TextView
            android:id="@+id/customerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/getAccounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Get Account Info"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
    />
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/postAccounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Add Account"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
    />
    <Button
            android:id="@+id/deleteAccounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Delete All Accounts"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
    />
    <Button
            android:id="@+id/getBills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Get Bills"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

</LinearLayout>